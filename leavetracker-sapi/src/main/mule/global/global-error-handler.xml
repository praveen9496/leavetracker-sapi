http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
	<sub-flow name="commonError" doc:id="5be76457-5623-4589-b38f-728fe1aa2cba" >
		<ee:transform doc:name="commonError" doc:id="6ae51a07-84d4-4a46-95ee-fdc68b2567f8" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
  errorType: error.errorType.identifier  ,
  timestamp: (now() >> "IST" as String {format: "yyyy-MM-dd HH:mm:ss.SSS"}),
  errorDescription: error.detailedDescription
  
} ]]></ee:set-payload>
			</ee:message>
			<ee:variables >
			</ee:variables>
		</ee:transform>
	</sub-flow>
	<error-handler name="main-errorHandler" doc:id="554cf65e-9316-4903-9f56-1f61db901eab" >
		<on-error-propagate type="APIKIT:BAD_REQUEST">
                <ee:transform doc:name="Bad request">
                    <ee:message>
                        <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{message: "Bad request",
statusCode: 400
}]]></ee:set-payload>
                    </ee:message>
                    <ee:variables>
                        <ee:set-variable variableName="httpStatus"><![CDATA[400]]></ee:set-variable>
                    </ee:variables>
                </ee:transform>
            </on-error-propagate>
		<on-error-propagate type="APIKIT:NOT_FOUND">
                <ee:transform doc:name="Resource not found">
                    <ee:message>
                        <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{message: "Resource not found",statusCode: 404}]]></ee:set-payload>
                    </ee:message>
                    <ee:variables>
                        <ee:set-variable variableName="httpStatus"><![CDATA[404]]></ee:set-variable>
                    </ee:variables>
                </ee:transform>
            </on-error-propagate>
